@app.get("/webhook")
async def verify(request: Request):
    params = await request.query_params
    if params["hub.mode"] == "subscribe" and params["hub.verify_token"] == VERIFY_TOKEN:
        return int(params["hub.challenge"])
    return "Forbidden", 403


